<p id="notice"><%= notice %></p>

<h1>Listing Request Categories</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Ref</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @request_categories.each do |request_category| %>
      <tr>
        <td><%= request_category.category %></td>
        <td><%= request_category.ref_id %></td>
        <td><%= link_to 'Show', request_category %></td>
        <td><%= link_to 'Edit', edit_request_category_path(request_category) %></td>
        <td><%= link_to 'Destroy', request_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

