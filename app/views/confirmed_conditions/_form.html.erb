<%= simple_form_for(@confirmed_condition) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :confirmed_appointment_id %>
    <%= f.input :condition_id %>
    <%= f.input :allergy_id %>
    <%= f.input :comment %>
    <%= f.input :user_id %>
    <%= f.input :entity %>
    <%= f.input :active_status %>
    <%= f.input :del_status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
