<% if flash[:notice] %>
  <p class="flash_notice " id = 'notes' style = "margin-top: 5px"><%= notice %></p>
<%end%>

<!-- <div class="col-md-3 col-xs-12"></div> -->

<div class="col-md-12 col-xs-12">
	<h4>Services Avalable at <br /><%= @provider %></h4>
	
	<div class="table-responsive">
		<table class="table table-condensed table-bordered table-striped w3-card-4 w3-table-all">
		  <thead>
		    <tr class="w3-teal">
		      <th>Service</th>
		      <th>Status</th>
		      <th style="width: 15px">Details</th>
		    </tr>
		  </thead>
		
		  <tbody>
		    <% @provider_services.each do |provider_service| %>
		      <tr>		        
		         <td><%= provider_service.service_master.title %></td>
		        
		       
		        <% if provider_service.active_status == true %>  
		      		<td style="color: ">Active</td>
		      		
		      	<%elsif provider_service.active_status == false %>
		      		<td style="color: red">Inactive</td>
		      		
		        <%end%>
		        <td style="15px"><%= link_to 'Details', service_details_path(:service_id => provider_service.service_id, :provider_id => provider_service.service_provider_id), remote: true, class: "w3-btn w3-indigo w3-hover-indigo w3-small w3-round-xlarge w3-middle " %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
	
	<div>
     <%= link_to 'Back', provider_masters_path, :remote=> true,  class: "w3-button  w3-black w3-hover-black w3-right w3-small w3-round-xxlarge w3-card" %>
	 <%= link_to '+', new_provider_service_path(:provider_id => @current_prov_id), :remote=> true, class: "w3-button w3-circle w3-teal w3-hover-teal w3-left w3-card" %>
	<br />
	</div>
	<br>
</div>
<!-- <div class="col-md-3 col-xs-12"></div> -->
<script type="text/javascript">
$(document).ready(function(){
  setTimeout(function(){
    $('.flash_notice').remove();
  }, 4000);
 })
</script>
