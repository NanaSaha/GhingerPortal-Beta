<%= simple_form_for(@allergies_master) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, label: "Allergy" %>
    <%= f.input :comment, label: "Remark" %>
    <%= f.input :user_id, as: :hidden %>
    <%= f.input :entity, as: :hidden %>
    <!-- <%#= f.input :active_status, as: :hidden, input_html: {value: 1} %> -->
    <!-- <%#= f.input :del_status, as: :hidden, input_html: {value: 0} %> -->
  </div>

  <div class="form-actions">
    <%= link_to 'Back', allergies_masters_path, class: "w3-left w3-button w3-small w3-round-large w3-blue w3-hover-blue" %>
    <%= f.button :submit, class: "w3-right w3-button w3-small w3-round-large w3-teal w3-hover-teal", value: "Add" %>
    <br />
  </div>
<% end %>
