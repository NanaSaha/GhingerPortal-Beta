<p id="notice"><%= notice %></p>

<h1>Listing Requester Allergies</h1>

<table>
  <thead>
    <tr>
      <th>Pre appointment</th>
      <th>Allergy</th>
      <th>Comment</th>
      <th>User</th>
      <th>Active status</th>
      <th>Del status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requester_allergies.each do |requester_allergy| %>
      <tr>
        <td><%= requester_allergy.pre_appointment_id %></td>
        <td><%= requester_allergy.allergy_id %></td>
        <td><%= requester_allergy.comment %></td>
        <td><%= requester_allergy.user_id %></td>
        <td><%= requester_allergy.active_status %></td>
        <td><%= requester_allergy.del_status %></td>
        <td><%= link_to 'Show', requester_allergy %></td>
        <td><%= link_to 'Edit', edit_requester_allergy_path(requester_allergy) %></td>
        <td><%= link_to 'Destroy', requester_allergy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

