<%= simple_form_for(@city_town_master, :remote => true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :city_town_name, label: "City/Town" %>
    <%= f.input :region_id,as: :hidden, input_html: {value: @current_region_id} %>
     <%= f.input :comment, label: "Remark" %>
    <%= f.input :entity_id, as: :hidden %>
    <%= f.input :user_id, as: :hidden, input_html: {value: current_user.id} %>
    <%= f.input :active_status, as: :hidden, input_html: {value: 1} %>
    <%= f.input :change_status, as: :hidden, input_html: {value: 0} %>
  </div>

  <div class="form-actions">
    <%= link_to 'Back', region_masters_path, remote: true, class: "w3-left w3-button w3-small w3-round-large w3-blue w3-hover-blue" %>
    <%= f.button :submit, class: "w3-right w3-button w3-small w3-round-large w3-teal w3-hover-teal", value: "Add City" %>
    <br />
  </div>
<% end %>
<br />
