<div class="nested-fields">
	<h4>Login Credentials</h4>
	
	<%= f.input :role_id, label: "User role", collection: Role.all, label_method: "name", value_method: :id %>
	<%= f.input :username, required: true, autofocus: true %>
	<!-- <%= f.input :email, autofocus: true %> -->
    <%= f.input :password, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation %>
    <!-- <%= f.input :active_status, as: :hidden, input_html: {vlaue: 1} %> -->
    <!-- <%= f.input :del_status, as: :hidden, input_html: {vlaue: 0} %> -->

	 <p><b>Upload a profile picture</b></p>
	 <%= f.input :profile, as: :file %>
	 
</div>
