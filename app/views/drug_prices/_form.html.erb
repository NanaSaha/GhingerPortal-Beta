<%= simple_form_for(@drug_price) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :drug_id %>
    <%= f.input :price %>
    <%= f.input :unit_id %>
    <%= f.input :comment %>
    <%= f.input :user_id %>
    <%= f.input :active_status %>
    <%= f.input :del_status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
