<p id="notice"><%= notice %></p>

<h1>Listing Drug Prices</h1>

<table>
  <thead>
    <tr>
      <th>Drug</th>
      <th>Price</th>
      <th>Unit</th>
      <th>Comment</th>
      <th>User</th>
      <th>Active status</th>
      <th>Del status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drug_prices.each do |drug_price| %>
      <tr>
        <td><%= drug_price.drug_id %></td>
        <td><%= drug_price.price %></td>
        <td><%= drug_price.unit_id %></td>
        <td><%= drug_price.comment %></td>
        <td><%= drug_price.user_id %></td>
        <td><%= drug_price.active_status %></td>
        <td><%= drug_price.del_status %></td>
        <td><%= link_to 'Show', drug_price %></td>
        <td><%= link_to 'Edit', edit_drug_price_path(drug_price) %></td>
        <td><%= link_to 'Destroy', drug_price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

