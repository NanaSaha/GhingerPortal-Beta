<%= simple_form_for(@person_type_master, :remote => true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_type_title %>
    <%= f.input :comment, label: "Remark" %>
    <%= f.input :entity, as: :hidden %>
    <%= f.input :user_id, as: :hidden, input_html: {value: current_user.id} %>
    <%= f.input :active_status, as: :hidden, input_html: {value: 1} %>
    <%= f.input :del_status, as: :hidden, input_html: {value: 0} %>
  </div>
 
  <div class="form-actions">
  	<%= link_to 'Back', person_type_masters_path, class: "w3-left w3-button w3-small w3-round-large w3-black w3-hover-black" %>
    <%= f.button :submit, class: "w3-right w3-button w3-small w3-round-large w3-blue w3-hover-blue", value: "Add user type"  %>
  <br />
  </div>
<% end %>
<br />
