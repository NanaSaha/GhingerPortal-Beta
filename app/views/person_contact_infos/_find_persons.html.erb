
<div id="id01" class="w3-modal w3-card-4" style="display: block">
    <div class="w3-modal-content w3-animate-top w3-card-4 w3-light-gray" style="width: 40%">
      <header class="w3-container"> 
        <h4>Personnel Detail</h4> 
      </header>
      <br />
      
      <div class="col-md-12 col-xs-12 w3-padding">
      	<div class="w3-container"> 	
	      	  <table class="table table-condensed table-bordered table-striped w3-card">
				 <tr><td class="w3-teal"><strong>Surname: </strong></td><td style="padding-left: 6%""><%= @person_infos.surname %> </td></tr>
				 <tr><td class="w3-teal" ><strong>Othername(s): </strong></td><td style="padding-left: 6%""><%= @person_infos.other_names %> </td></tr>
				 <tr><td class="w3-teal" ><strong>DOB: </strong></td><td style="padding-left: 6%""><%= @person_infos.dob %> </td></tr>
				 <tr><td class="w3-teal"><strong>Person Type: </strong></td><td style="padding-left: 6%""><%= @person_infos.person_type_master.user_type_title %></td></tr>
				 <tr><td class="w3-teal" ><strong>Contact: </strong></td><td style="padding-left: 6%""><%= @person_contact_infos.contact_number if @person_contact_infos.contact_number %> </td></tr>
				 <tr><td class="w3-teal" ><strong>Email: </strong></td><td style="padding-left: 6%""><%= @person_contact_infos.email %> </tr>	
				 <tr><td class="w3-teal" ><strong>Postal Address: </strong></td><td style="padding-left: 6%""><%= @person_contact_infos.postal_address %> </td></tr>
				 <tr><td class="w3-teal" ><strong>Location Address: </strong></td><td style="padding-left: 6%""><%= @person_contact_infos.location_address %> </td></tr>
				 
				 <% if @person_infos.person_type_id == 'D' and @person_infos.pd_sub == true %>
				  <tr><td class="w3-teal"><strong>Subscribed to PDS: </strong></td><td style="padding-left: 6%"">Yes</td></tr>
				 <% elsif @person_infos.person_type_id == 'D' and @person_infos.pd_sub == false  %>
				   <tr><td class="w3-teal"><strong>Subscribed to PDS: </strong></td><td style="padding-left: 6%"">No</td></tr>
				 <%else%>
				    <tr><td class="w3-teal"><strong>Subscribed to PDS: </strong></td><td style="padding-left: 6%"">Null</td></tr>
				 <%end%>
				  
				 <tr><td class="w3-teal" ><strong>Added By:</strong></td><td style="padding-left: 6%""><%= @person_contact_infos.user.person_info.surname if @person_contact_infos.user %> <%= @person_contact_infos.user.person_info.other_names if @person_contact_infos.user %> </td></tr> 
				  	
			  </table> 
        </div>
      </div> 
      
      <br />
      <footer class="w3-container">
      	<!-- <% if @person_infos.person_type_master.user_type_title != 'Patient' %>
      	   <%= link_to 'Subscriptions', find_engaged_user_service_path(:person_id => @person_infos.id), :remote=> true, class: "w3-button w3-blue w3-hover-blue w3-left w3-card-4 w3-small w3-round-xlarge" %>
        <%end%> -->
       
        <%= link_to 'Back', person_infos_path, :remote=> true, class: "w3-button w3-black w3-hover-black w3-right w3-card-4 w3-small w3-round-xlarge" %>
      <br />
      </footer>
      <br />
    </div>
    <br />
</div>