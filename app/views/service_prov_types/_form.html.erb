<%= simple_form_for(@service_prov_type, :remote => true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :service_prov_type_title, label: "Facity Type", placeholder: "E.g. Hospital" %>
    <%= f.input :comment %>
    <%= f.input :entity_id, as: :hidden %>
    <%= f.input :user_id, as: :hidden, input_html: {value: current_user.id} %>
    <%= f.input :active_status, as: :hidden, input_html: {value: 1} %>
    <%= f.input :change_status, as: :hidden, input_html: {value: 0} %>
  </div>

  <div class="form-actions">
    <%= link_to 'Back', service_prov_types_path, remote: true, class: "w3-left w3-button w3-small w3-round-large w3-blue w3-hover-blue" %>
    <%= f.button :submit, class: "w3-right w3-button w3-small w3-round-large w3-teal w3-hover-teal", value: "Add Provider Type" %>
    <br />
  </div>
<% end %>
<br />
