
<h4>Available Provider Services</h4>

<div class="table-responsive">
	<table class="table table-condensed table-bordered table-striped">
	  <thead>
	    <tr class="w3-teal">
	      <th>Service provider</th>
	      <th>Service</th>
	      <th>Comment</th>
	      <th>Entity</th>
	      <th>Added by</th>
	      <th>Status</th>
	      <th>Date/time</th>
	      <th colspan="3">Options</th>
	    </tr>
	  </thead>
	
	  <tbody>
	    <% @provider_services.each do |provider_service| %>
	      <tr>
	         <td><%= provider_service.provider_master.provider_name if provider_service.provider_master %></td>
	         <td><%= provider_service.service_master.title if provider_service.service_master %></td>
	         <td><%= provider_service.comment %></td>
	         <td><%= provider_service.entity_id %></td>
	         <td><%= provider_service.user_id %></td>
	       
	        <% if provider_service.active_status == true %>  
	      		<td style="color: ">Active</td>
	      		
	      	<%elsif provider_service.active_status == false %>
	      		<td style="color: red">Inactive</td>
	      		
	        <%end%>
	        
	        <td><%= provider_service.created_at.strftime("%F %R") %></td>
	        <td style="width: 5px"><%= link_to 'View', provider_service, remote: true, class: "w3-button w3-indigo w3-hover-indigo w3-card w3-small w3-round w3-round-xxlarge" %></td>
	        <td style="width: 5px"><%= link_to 'Edit', edit_provider_service_path(provider_service), remote: true, class: "w3-button w3-gray w3-card w3-hover-gray w3-small w3-round w3-round-xxlarge" %></td>
	        
	        <td style="width: 15px">
	           <% if provider_service.active_status == false %>
	           	 <%= link_to 'Enable', enable_provider_service_path(:chosen => provider_service.id), data: { confirm: 'You are about to enable the selected provider service. Do you want to continue?' }, remote: true,  class: "w3-button w3-blue w3-hover-blue w3-small w3-round-xxlarge w3-card" %>
                  
               <% else provider_service.active_status == true %>
	              <%= link_to 'Disable', disable_provider_service_path(:chosen => provider_service.id), data: { confirm: 'You are about to disable the selected provider service. Do you want to continue?' }, remote: true,  class: "w3-button w3-red w3-hover-red w3-small w3-round w3-round-xxlarge w3-card" %> 
	                           
               <% end %>
	        	
	        </td>
	        
	        <!-- <td><%#= link_to 'Destroy', service_prov_type, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
	      </tr>
	    <% end %>
	  </tbody>
	</table>
</div>

<div>
 <%= link_to '+', new_provider_service_path , :remote=> true, class: "w3-button w3-circle w3-teal w3-hover-teal" %>
</div>
