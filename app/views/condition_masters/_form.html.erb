<%= simple_form_for(@condition_master) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :condition_name %>
    <%= f.input :comment %>
    <%= f.input :user_id,as: :hidden %>
    <%= f.input :active_status,as: :hidden, input_html: {value: 1}  %>
    <%= f.input :del_status, as: :hidden, input_html: {value: 0} %>
  </div>

  <div class="form-actions">
    <div class="form-actions">
    <%= link_to 'Back', condition_masters_path, class: "w3-left w3-button w3-small w3-round-large w3-blue w3-hover-blue" %>
    <%= f.button :submit, class: "w3-right w3-button w3-small w3-round-large w3-teal w3-hover-teal", value: "Add" %>
    <br />
  </div>
  </div>
<% end %>
<br>