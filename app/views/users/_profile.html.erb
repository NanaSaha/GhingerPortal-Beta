<div id="id01" class="w3-modal w3-card-4" style="display: block">
    <div class="w3-modal-content w3-animate-top w3-card-4 w3-light-gray w3-round-xlarge" style="width: 30%; margin-top: -2%;">
       <% if flash[:notice] %>
		   <p class="flash_notice " id = 'notes' style = "margin-top: 5px"><%= notice %></p>
	   <% end %>
      <header class="w3-container"> 
        <!-- <h4>Your Profile</h4>  -->
      </header>
      <div class="col-md-12 col-xs-12 w3-padding">
	      	<div class="w3-container "> 	
				    <div class="w3-center">
						<% if @user.profile.nil? %>
						   <%= image_tag ('user.png'), class: "w3-circle", :style => "width:30%" %>
						<% else %>
						  <%= image_tag @user.profile.url(:thumb), class: "w3-circle", :style => "width:30%" %>
						<% end %>
			        </div>
			         <div class="w3-container">
				      <h4><%= @user.person_info.surname %> <%= @user.person_info.other_names %></h4>
				      <p class="w3-center"><b><%= @user.role.name %></b></p>  
				    </div> 
				    
				    <table class="table table-condensed table-bordered table-striped">
				      <!-- <tr><td class="w3-teal" style="width: 30%"><strong>Surname </strong></td><td style="padding-left: 6%""><%= @user.person_info.surname %>  </td></tr> -->
					  <!-- <tr><td class="w3-teal" ><strong>Othername(s) </strong></td><td style="padding-left: 6%""><%= @user.person_info.other_names %> </td></tr> -->
					  <tr><td class="w3-green" style="width: 30%"><strong>Username </strong></td><td style="padding-left: 6%""><%= @user.username %> </td></tr>				 
					  <!-- <tr><td class="w3-teal"><strong>Person Type </strong></td><td style="padding-left: 6%""><%= @user.person_info.person_type_master.user_type_title %></td></tr>			  -->
					  <tr><td class="w3-green" ><strong>Contact </strong></td><td style="padding-left: 6%""><%= @user.person_info.person_contact_infos[0].contact_number %> </td></tr>
					  <tr><td class="w3-green" ><strong>Email </strong></td><td style="padding-left: 6%""><%= @user.person_info.person_contact_infos[0].email %> </tr>	
					  <tr><td class="w3-green" ><strong>Postal Address </strong></td><td style="padding-left: 6%""><%= @user.person_info.person_contact_infos[0].postal_address %> </td></tr>
					  <tr><td class="w3-green" ><strong>Location Address </strong></td><td style="padding-left: 6%""><%= @user.person_info.person_contact_infos[0].location_address %> </td></tr>		
			       </table>
				    <br />
	        </div> 
      </div>  
      <!-- <div class="col-md-1 col-xs-12"></div> -->
      <br />
      <footer class="w3-container">
        <% if current_user.role.name == 'Super Admin' or current_user.role.name == 'Customer Service'%>
        <!-- <%= link_to 'Home', admin_root_path, class: "w3-button w3-black w3-hover-black w3-left w3-card-4 w3-small w3-round-xlarge" %>		 <%= link_to 'Edit', edit_person_info_path(current_user), class: "w3-button w3-black w3-hover-black w3-right w3-card-4 w3-small w3-round-xlarge" %> -->
        <% elsif current_user.role.name == 'Doctor' %>
			<%= link_to 'Home', doctor_root_path, class: "w3-button w3-black w3-hover-black w3-left w3-card-4 w3-small w3-round-xlarge" %>
		<% elsif current_user.role.name == 'Nurse' %>
			<%= link_to 'Home', nurse_root_path, class: "w3-button w3-black w3-hover-black w3-left w3-card-4 w3-small w3-round-xlarge" %>
	    <% elsif current_user.role.name == 'Patient' %>
			<span onclick="document.getElementById('id01').style.display='none'" class="w3-button w3-black w3-hover-black w3-left w3-card-4 w3-small w3-round-xlarge">Close</span>
		<%end%>
		<%= link_to 'Edit', edit_profile_path, remote: true, class: "w3-button w3-green w3-hover-green w3-right w3-card-4 w3-small w3-round-xlarge" %>
        
      <br />
      </footer>
      <br />
    </div>
    <br />
</div>



<script type="text/javascript">
$(document).ready(function(){
  setTimeout(function(){
    $('#notes').remove();
  }, 4000);
 });
 
</script>
