<br>
<%= simple_form_for(@referal) do |f| %>
  <%= f.error_notification %>

<div id="id01" class="w3-modal w3-card-4 w3-round-large" style="display: block;">
    <div class="w3-modal-content w3-animate-left w3-card-4 w3-light-gray" style="width: 33%; max-height: 80%; overflow-y: auto; back">
    	<div style="max-width: 70%; text-align: center; margin-left: 15%; margin-top: 15px">
      
	    	<% if flash[:notice] %>
                <p class="flash_notice " id = 'notes' style = ""><%= notice %></p>
		  	 <% end %>
		  	
    	</div>	   
      <header class="w3-container">  
        <h4>Refer a Patient to Ghinger</h4> 
      </header>          
           <div class="w3-container" > 				 		      	
              
               <div class="form-inputs">
		    <%= f.input :surname %>
		    <%= f.input :other_names %>
		    <!-- <%#= f.input :dob, label: "Date of Birth", as: :string, input_html: {id: "datepicker", placeholder: "Select date of birth or type yyyy-mm-dd"} %> -->
		    <%= f.input :contact, label: "Patient Tel. Number" %>
		    <%= f.input :refered_by, as: :hidden, input_html: {value: current_user.id }%>
		    <%= f.input :user_id, as: :hidden %>
		    <%= f.input :active_status, as: :hidden, input_html: {value: 1} %>
		    <%= f.input :del_status, as: :hidden, input_html: {value: 0} %> 
		    <%= f.input :processed_status, as: :hidden, input_html: {value: 0} %> 
				       
               </div>
           </div>
        <br>
      <footer class="w3-container">
        <%= f.button :submit, class: "w3-button w3-teal w3-hover-teal w3-right w3-card-4 w3-small w3-round-xlarge", value: "Save" %>
        <%= link_to 'Cancel', my_referal_path, class: "w3-button w3-black w3-hover-black w3-left w3-card-4 w3-small w3-round-xlarge" %>
      <br />
      </footer>
      <% end %>
      <br />
    </div>
    <br />
</div>

<%= tinymce %>

